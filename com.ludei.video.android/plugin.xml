<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="cocoon-plugin-video-android"
    version="1.0.1">

    <name>Cocoon Android Video plugin</name>
    <description>Cocoon plugin video support.</description>
    <license>Copyright Ludei</license>
    <keywords>cordova, ludei, cocoon, application</keywords>
    <repo></repo>
    <issue></issue>

    <engines>
      <engine name="cordova-android" version=">=4" />
      <engine name="cordova-plugman" version=">=4.2.0" />
    </engines>

    <platform name="android">
        <hook type="after_plugin_install" src="hooks/after_plugin_install.js" />
        
        <source-file src="src/LudeiExtensionVideo.jar" target-dir="libs" framework="true" />
    </platform>
</plugin>
