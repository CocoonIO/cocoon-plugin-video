<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="cocoon-plugin-video-ios"
    version="1.0.1">

    <name>Cocoon iOS Video plugin</name>
    <description>Cocoon plugin video support.</description>
    <license>Copyright Ludei</license>
    <keywords>cordova, ludei, cocoon, application</keywords>
    <repo></repo>
    <issue></issue>

    <engines>
      <engine name="cordova-android" version=">=4" />
      <engine name="cordova-plugman" version=">=4.2.0" />
    </engines>

    <platform name="ios">
        <source-file src="src/libLudeiExtensionVideo.a" framework="true" />   
        <framework src="MediaPlayer.framework" weak="true" /> 
    </platform>
</plugin>
